    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="330"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="125" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">
                <TextBlock x:Name="ClipTitle" Text="ClipText" TextWrapping="Wrap" />
                <Button Content="Clear" Click="ClearButton_OnClick"></Button>
                <ToggleButton Content="Underline" Click="UnderLineButton_OnClick"></ToggleButton>
                <ToggleSwitch x:Name="ListenSwitch" Toggled="ListenSwitch_OnToggled"></ToggleSwitch>
            </StackPanel>

            <ListView Padding="2"
                Grid.Row="1"
                      x:Name="ClipListView"
                      CanDragItems="True"
                      SelectionMode="Extended"
                      ItemsSource="{x:Bind ClipList, Mode=TwoWay}">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <!-- <Setter Property="Height" Value="80" /> -->
                        <Setter Property="Margin" Value="0,0,12,0" />
                        <Setter Property="Padding" Value="4,-7,5,3" />
                        <Setter Property="Background" Value="#343434" />
                        <Setter Property="HorizontalAlignment" Value="Stretch" />
                        <Setter Property="VerticalAlignment" Value="Stretch" />
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemContainerTransitions>
                    <TransitionCollection>
                        <AddDeleteThemeTransition />
                    </TransitionCollection>
                </ListView.ItemContainerTransitions>

            </ListView>
        </Grid>
        <Grid Grid.Column="1"></Grid>


    </Grid>
